def make_command() {
  dir(STAGE_NAME){
    sh """
      bash -c '
        source /usr/local/share/chruby/chruby.sh
        chruby 2.5.0
        make test
      '
    """
  }
}

pipeline {
  agent { label "!master" }

  stages {
    stage('Build Base Images'){
      parallel {
        stage('opg-base-1604'){
          steps { script { make_command() } }
        }

      }
    }

  }

}
