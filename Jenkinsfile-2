def make_command() {
  dir(STAGE_NAME){
    sh """
      source /usr/local/share/chruby/chruby.sh
      chruby 2.5.0
      make test
    """
  }
}

pipeline {
  agent { label "!master" }

  stages {
    stage('Lint') {
      parallel {
        stage('opg-base-1604') {
          steps { { script { make_command } } }
        }
        stage('opg-golang-alpine') {
          steps { { script { make_command } } }
        }

      }
    }

  }

}
